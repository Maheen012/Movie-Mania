<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.LoginController">
    <Label text="Movie Mania - Login" style="-fx-font-size: 24px;"/>
    <TextField fx:id="txtUsername" promptText="Username"/>
    <PasswordField fx:id="txtPassword" promptText="Password"/>
    <Button text="Login" onAction="#handleLogin"/>
    <Label fx:id="lblMessage" textFill="red"/>
</VBox>
